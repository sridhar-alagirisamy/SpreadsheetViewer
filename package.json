{
	"name": "spreadsheetviewer",
	"displayName": "SpreadsheetViewer",
	"description": "To view and manipulate excel files in VSCode editor using Syncfusion EJ2 Spreadsheet component",
	"version": "0.0.1",
	"publisher": "Syncfusion",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:spreadsheet.open"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "spreadsheet",
				"extensions": [
					".xlsx",
					".xls",
					".csv",
					".tsv"
				],
				"aliases": [
					"Spreadsheet"
				]
			}
		],
		"commands": [
			{
				"command": "spreadsheet.open",
				"category": "Spreadsheet",
				"title": "Spreadsheet Viewer"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == spreadsheet",
					"command": "spreadsheet.open",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "editorLangId == spreadsheet",
					"command": "spreadsheet.open",
					"group": "navigation"
				}
			],
			"editor/title/context": [
				{
					"when": "resourceLangId == spreadsheet",
					"command": "spreadsheet.open",
					"group": "navigation"
				}
			]
		},
        "configuration": {
            "type": "object",
            "title": "Spreadsheet Viewer",
            "properties": {
                "spreadsheet-viewer.showRibbon": {
                    "type": "boolean",
                    "default": true,
                    "description": "It shows or hides the ribbon in spreadsheet."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc  -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"express": "^4.17.1"
	}
}
